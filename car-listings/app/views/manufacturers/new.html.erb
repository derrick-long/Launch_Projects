<h1> New Manufacturer Form </h1>
<% if @manufacturer.errors.any? %>
  <h3> Please Correct The Following </h3>
    <% @manufacturer.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
<% end %>

<div class="new-manufacturer">
  <%= form_for(@manufacturer) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>




    <%= f.label :country %>
    <%= f.text_field :country %>


    <%= f.submit("Create Manufacturer") %>
  <% end %>
</div>
