<h1> New Car Form </h1>
<% if @car.errors.any? %>
  <h3> Please Correct The Following </h3>
    <% @car.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
<% end %>

<div class="new-car">
  <%= form_for(@car) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :year %>
    <%= f.text_field :year %>

    <%= f.label :mileage %>
    <%= f.text_field :mileage %>


    <%= f.label :color %>
    <%= f.text_field :color %>

    <%= f.label :manufacturer %>
    <%= f.collection_select :manufacturer, @manufacturers, :id, :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>


    <%= f.submit("Create Car") %>
  <% end %>
</div>
